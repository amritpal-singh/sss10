<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0.0"
        id          = "com.cisc.sssten"
        version     = "1.0.0" >

    <preference name="phonegap-version" value="3.5.0" />
    <name>SSS10</name>

    <description>
        Permissible Structural Steel Seismic-Force-Resisting Systems in accordance with NBC 2010 and CSA S16-09.
    </description>

    <author href="https://build.phonegap.com" email="contact@tranceserve.com">
      TS TEAM    
    </author>
    
    <icon src="res/android/icon-96-xhdpi.png" />

    <platform name="android">
        <icon density="ldpi" src="res/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/android/icon-72-hdpi.png" />
        <icon density="xhdpi" srcdro="res/android/icon-96-xhdpi.png" />
    </platform>

    <platform name="ios">
        <icon height="57" src="res/ios/icon-57.png" width="57" />
        <icon height="72" src="res/ios/icon-72.png" width="72" />
        <icon height="114" src="res/ios/icon-114.png" width="114" />
        <icon height="144" src="res/ios/icon-72-2x.png" width="144" />
    </platform>
    

    <gap:platform name="android" />
    <gap:platform name="ios" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:splash src="res/splash/android/screen-hdpi-portrait.png" />
    <preference name="splash-screen-duration" value="30000"/>

    <gap:splash src="res/splash/ios/Default-iphone.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/splash/ios/Default@2x-iphone.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="res/splash/ios/Default-Landscape@2x-ipad.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="res/splash/ios/Default-Landscape-ipad.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="res/splash/ios/Default-Portrait@2x-ipad.png" gap:platform="ios" width="768" height="1024" />

    <access origin="*" />

    
</widget>